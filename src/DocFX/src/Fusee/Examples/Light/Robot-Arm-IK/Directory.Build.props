<Project>
  <PropertyGroup>
    <FuseeEngineRoot Condition=" '$(FuseeRoot)' != '' ">$(FuseeRoot)\</FuseeEngineRoot>
    <FuseeEngineRoot Condition=" '$(FuseeEngineRoot)' == '' ">..\..\..\</FuseeEngineRoot>
    
    <FuseeProjectRoot>$(MSBuildThisFileDirectory)\</FuseeProjectRoot>
    
    <!--Build into main FUSEE bin directory-->
    <!--<BaseOutputPath>$(FuseeEngineRoot)\bin\$(Configuration)</BaseOutputPath>-->
    
    <!--Build into local bin directory-->
    <BaseOutputPath>$(FuseeProjectRoot)\bin\Debug\</BaseOutputPath>
    
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

